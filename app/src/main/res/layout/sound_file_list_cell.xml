<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sound_cell_height"
    android:background="@drawable/under_bar">

        <RelativeLayout
            android:layout_width="@dimen/sound_cell_height"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/icon_image"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:id="@+id/title_text"
                android:textSize="13sp"
                android:textColor="@color/colorPrimary"
                android:gravity="center_horizontal|left"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/sub_title_text"
                android:textSize="10sp"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center_horizontal|left"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="@dimen/sound_cell_height"
            android:layout_height="match_parent">

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/remove_button"
                android:layout_centerInParent="true"
                android:background="@drawable/remove_button_blue"/>

        </RelativeLayout>

</LinearLayout>